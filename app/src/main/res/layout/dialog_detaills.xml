<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        app:cardCornerRadius="0dp"
        android:elevation="4dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_weight="0.10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/ibtn_itemd_image"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:padding="2dp"
                        android:background="@color/colorPrimary"
                        android:src="@drawable/ic_stars"/>

                    <TextView
                        android:id="@+id/tv_itemd_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@color/colorPrimary"
                        android:textAlignment="center"
                        android:textColor="@color/White"
                        android:text="Do"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.65"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/v_itemd_color"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/colorPrimaryDark"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.65">
                        <TextView
                            android:id="@+id/tv_itemd_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:lines="2"
                            android:text="@string/app_name"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="0.35"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_itemd_name_type"
                            android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:text="Tipo"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/Black"
                            android:background="@drawable/border_stat_old"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:id="@+id/tv_itemd_cap_aux"
                            android:layout_weight="0.2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Capi:"/>



                        <LinearLayout
                            android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="00000">
                            <TextView
                                android:id="@+id/tv_itemd_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="date"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_weight="0.07"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_weight="0.47"
                        android:id="@+id/ibtn_itemd_exit"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/Red"
                        android:src="@drawable/ic_exit_to_app"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.06"/>

                    <ImageButton
                        android:layout_weight="0.47"
                        android:id="@+id/ibtn_itemd_save"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/Green"
                        android:src="@drawable/ic_save"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_visible_match_cap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/ibtnAdd1"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background_circular"
                    android:src="@drawable/ic_add_one"/>

                <TextView
                    android:id="@+id/tv_itemd_cap"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0000"/>

                <ImageButton
                    android:id="@+id/ibtnSust1"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background_circular_x"
                    android:src="@drawable/ic_sustract_one"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>