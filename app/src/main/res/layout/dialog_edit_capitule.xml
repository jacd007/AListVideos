<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        app:cardElevation="4dp"
        android:elevation="5dp"
        android:layout_margin="1dp"
        app:cardMaxElevation="6dp"
        android:background="@drawable/border">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/iv_dialog_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#000"
                        android:layout_marginTop="40dp"
                        android:minHeight="250dp"
                        android:minWidth="250dp"
                        android:src="@drawable/ic_no_image"
                        android:contentDescription="dialog mColor" />

                    <ImageView
                        android:id="@+id/ibtn_dialog_add"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/button_background_circular"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="110dp"
                        android:minHeight="100dp"
                        android:minWidth="50dp"
                        android:src="@drawable/ic_add_one"
                        android:contentDescription="dialog mColor" />

                    <ImageView
                        android:id="@+id/ibtn_dialog_sustract"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/button_background_circular_x"
                        android:layout_marginTop="95dp"
                        android:layout_marginLeft="110dp"
                        android:minHeight="100dp"
                        android:minWidth="50dp"
                        android:src="@drawable/ic_sustract_one"
                        android:contentDescription="dialog mColor" />

                    <TextView
                        android:id="@+id/tv_dialog_cap"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="55dp"
                        android:layout_marginLeft="200dp"
                        android:minHeight="100dp"
                        android:minWidth="50dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Capitulo XX" />

                    <TextView
                        android:id="@+id/tv_dialog_stat"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginLeft="200dp"
                        android:background="@drawable/border_stat_old"
                        android:minHeight="100dp"
                        android:minWidth="50dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:paddingHorizontal="5dp"
                        android:text="Estado X" />

                    <TextView
                        android:id="@+id/tv_dialog_date"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="150dp"
                        android:layout_marginLeft="0dp"
                        android:minHeight="100dp"
                        android:minWidth="50dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textStyle="italic"
                        android:singleLine="true"
                        android:text="Fecha Editada" />

                    <View
                        android:id="@+id/v_dialog_color"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#646464"
                        android:paddingHorizontal="5dp"
                        android:layout_marginTop="140dp"
                        android:layout_marginLeft="0dp"/>

                    <ImageView
                        android:id="@+id/ibtn_dialog_save"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/background_2"
                        android:layout_marginTop="175dp"
                        android:layout_marginLeft="50dp"
                        android:minHeight="100dp"
                        android:minWidth="50dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_save"
                        android:contentDescription="dialog mColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        tools:targetApi="lollipop">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_dialog_name"
                                android:layout_weight="0.9"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:minLines="1"
                                android:lines="4"
                                android:maxLines="4"
                                android:text="@string/app_name"/>

                            <ImageView
                                android:id="@+id/iv_dialog_cancel"
                                android:layout_weight="0.1"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:background="@color/colorPrimary"
                                android:src="@drawable/ic_cancel_red"
                                android:contentDescription="dialog cancel" />

                        </LinearLayout>

                    </LinearLayout>




                </RelativeLayout>



            </LinearLayout>

        </RelativeLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>