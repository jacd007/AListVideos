<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:cardElevation="4dp"
        android:elevation="5dp"
        android:layout_margin="1dp"
        app:cardMaxElevation="6dp"
        android:background="@drawable/border">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_weight="0.4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:id="@+id/iv_dialog_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="250dp"
                            android:minWidth="250dp"
                            android:src="@drawable/ic_no_image"
                            android:contentDescription="dialog mColor" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            tools:targetApi="lollipop">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_dialog_name"
                                        android:layout_weight="0.9"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:textColor="#fff"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        android:minLines="1"
                                        android:lines="4"
                                        android:maxLines="4"
                                        android:text="@string/app_name"/>

                                <ImageView
                                    android:id="@+id/iv_dialog_cancel"
                                    android:layout_weight="0.1"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:background="@color/colorPrimary"
                                    android:src="@drawable/ic_cancel_red"
                                    android:contentDescription="dialog cancel" />

                            </LinearLayout>

                        </LinearLayout>




                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="45dp"
                        tools:ignore="UselessParent">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.85"
                            android:background="@color/transparent"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.15"
                            android:background="@color/semi_black_trans"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_dialog_cap"
                                android:layout_weight="0.17"
                                android:layout_width="0dp"
                                android:gravity="center_vertical"
                                android:background="@color/semi_black_trans"
                                android:paddingLeft="5dp"
                                android:textColor="#fff"
                                android:layout_height="match_parent"
                                android:text="@string/app_name"/>

                            <TextView
                                android:id="@+id/tv_dialog_stat"
                                android:layout_weight="0.3"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:background="@color/semi_black_trans"
                                android:textColor="#fff"
                                android:layout_height="match_parent"
                                android:text="@string/app_name"/>

                            <TextView
                                android:id="@+id/tv_dialog_day"
                                android:layout_weight="0.23"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:background="@color/semi_black_trans"
                                android:textColor="@color/Yellow"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:layout_height="match_parent"
                                android:text="@string/app_name"/>

                            <TextView
                                android:id="@+id/tv_dialog_date"
                                android:layout_weight="0.35"
                                android:layout_width="0dp"
                                android:gravity="center_vertical|end"
                                android:background="@color/semi_black_trans"
                                android:textColor="@color/Blue"
                                android:paddingRight="5dp"
                                android:textSize="14sp"
                                android:textStyle="italic"
                                android:layout_height="match_parent"
                                android:text="@string/app_name"/>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>



            </RelativeLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>